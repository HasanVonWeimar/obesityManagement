<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.obesityuae.MainScreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:id="@+id/bmiLayout"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myWhitet"
            android:text="Your BMI is"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="-5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myWhitet"
        android:text=""
        android:id="@+id/BMIText"
        android:layout_gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myWhitet"
            android:text=""
            android:id="@+id/BMICase"
            android:layout_gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="5"
            android:textColor="@color/myWhitet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/stageText"
            android:textSize="15dp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="4"
            android:textColor="@color/myWhitet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/stageReasonsText"
            android:textSize="15dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/myWhitet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/treatmentText"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="4"
            android:textColor="@color/myWhitet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/treatmentMethodsText"
            android:textSize="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Dashboard"
            android:id="@+id/dashboard"
            android:background="@color/colorPrimary"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Good Stuff"
            android:id="@+id/newsFeed"
            android:background="@color/myGray"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
